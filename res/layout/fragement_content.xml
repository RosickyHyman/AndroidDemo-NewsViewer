<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"  >

    <com.hyman.newsviewer.view.NoScrollViewPager
        android:id="@+id/vp_content_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_content_home"
            android:text="首页" 
            style="@style/TabStyle"
            android:drawableTop="@drawable/btn_tab_home_selector"/>
        <RadioButton
            android:id="@+id/rb_content_news"
            style="@style/TabStyle"
            android:drawableTop="@drawable/btn_tab_news_selector"
            android:text="新闻中心" />
        <RadioButton
            android:id="@+id/rb_content_gov"
            style="@style/TabStyle"
            android:drawableTop="@drawable/btn_tab_gov_selector"
            android:text="政务"/> 
        <RadioButton
            android:id="@+id/rb_content_smart"
            style="@style/TabStyle"
            android:drawableTop="@drawable/btn_tab_smart_selector"
            android:text="智慧服务"/> 
        <RadioButton
            android:id="@+id/rb_content_setting"
            style="@style/TabStyle"
            android:drawableTop="@drawable/btn_tab_setting_selector"
            android:text="设置" />
    </RadioGroup>

</LinearLayout>
